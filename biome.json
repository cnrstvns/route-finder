{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "arrowParentheses": "always",
      "semicolons": "always",
      "jsxQuoteStyle": "single",
      "lineWidth": 80,
      "enabled": true,
      "indentWidth": 2
    }
  }
}
